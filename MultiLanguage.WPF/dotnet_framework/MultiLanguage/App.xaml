<Application x:Class="MultiLanguage.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MultiLanguage"
             StartupUri="MainWindow.xaml"
             Exit="Application_Exit">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Language\Language.Arabic.xaml"/>
                <ResourceDictionary Source="Language\Language.Chinese.xaml"/>
                <ResourceDictionary Source="Language\Language.English.xaml"/>
                <ResourceDictionary Source="Language\Language.French.xaml"/>
                <ResourceDictionary Source="Language\Language.Russian.xaml"/>
                <ResourceDictionary Source="Language\Language.Spanish.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
