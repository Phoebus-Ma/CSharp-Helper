<Window x:Class="AudioPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlayer"
        mc:Ignorable="d"
        Title="AudioPlayer" Height="200" Width="320">
    <Grid>
        <TextBox x:Name="m_audioPath" Width="180" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,20,0,0"/>
        <Button Content="..."   Width="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="230,20,0,0" Click="btnOpenFile_Click"/>

        <Label x:Name="m_lbltime" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,55,0,0"/>
        <Slider x:Name="m_sldProgress" IsEnabled="False" Maximum="100" Width="150" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,60,0,0"/>

        <Button Content="Start" Width="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,100,0,0"  Click="btnStart_Click"/>
        <Button Content="Pause" Width="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,100,0,0" Click="btnPause_Click"/>
        <Button Content="Stop"  Width="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,100,0,0" Click="btnStop_Click"/>
    </Grid>
</Window>
