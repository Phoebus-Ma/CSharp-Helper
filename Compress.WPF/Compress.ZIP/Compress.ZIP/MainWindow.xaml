<Window x:Class="Compress.ZIP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Compress.ZIP"
        mc:Ignorable="d"
        Title="ZIP Compressor" Height="260" Width="300">
    <Grid>
        <!--Source path: directory or file.-->
        <Label Content="   Source" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,20,0,0"/>
        <TextBox x:Name="m_tbsource" Width="180" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,25,0,0"/>
        <Button Content="Folder" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,55,0,0" Click="SelectSourceFolder_Click"/>
        <Button Content="File" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,55,0,0" Click="SelectSourceFile_Click"/>

        <!--destination path: directory or file.-->
        <Label Content="destination" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0"/>
        <TextBox x:Name="m_tbdest" Width="180" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="75,85,0,0"/>
        <Button Content="Folder" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,115,0,0" Click="SelectDestFoler_Click"/>
        <Button Content="File" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,115,0,0" Click="SelectDestFile_Click"/>
        
        <RadioButton x:Name="m_rbzip" Content="Zip" IsChecked="True" HorizontalAlignment="Left" Margin="50,155,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="m_rbunzip" Content="Unzip" HorizontalAlignment="Left" Margin="110,155,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="m_rbadd" Content="Add" HorizontalAlignment="Left" Margin="180,155,0,0" VerticalAlignment="Top"/>

        <Button Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,185,0,0" Click="StartCompress_Click"/>
    </Grid>
</Window>
